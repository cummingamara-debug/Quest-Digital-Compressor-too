<body>
  <h1>üñºÔ∏è Image Compressor Tool</h1>

  <div class="uploader">
    <input type="file" id="upload" accept="image/*">
    <br><br>
    <label for="quality">Compression Quality (0.1 - 1): </label>
    <input type="number" id="quality" min="0.1" max="1" step="0.1" value="0.7">
    <br><br>
    <button class="btn" onclick="compressImage()">Compress & Download</button>
  </div>

  <div id="preview"></div>

  <script>
    let uploadedImage = null;

    document.getElementById('upload').addEventListener('change', function(e) {
      const file = e.target.files[0];
      if (!file) return;
      const reader = new FileReader();
      reader.onload = function(event) {
        uploadedImage = new Image();
        uploadedImage.src = event.target.result;
        uploadedImage.onload = function() {
          document.getElementById('preview').innerHTML =
            '<h3>Original Preview:</h3><img src="' + uploadedImage.src + '">';
        };
      };
      reader.readAsDataURL(file);
    });

    function compressImage() {
      if (!uploadedImage) {
        alert("Please upload an image first!");
        return;
      }

      const quality = parseFloat(document.getElementById('quality').value);
      const canvas = document.createElement('canvas');
      const ctx = canvas.getContext('2d');

      const width = 800; // resize width
      const scaleFactor = width / uploadedImage.width;
      canvas.width = width;
      canvas.height = uploadedImage.height * scaleFactor;

      ctx.drawImage(uploadedImage, 0, 0, canvas.width, canvas.height);
      canvas.toBlob(function(blob) {
        const url = URL.createObjectURL(blob);
        const link = document.createElement('a');
        link.href = url;
        link.download = 'compressed-image.jpg';
        link.click();

        document.getElementById('preview').innerHTML +=
          '<h3>Compressed Preview:</h3><img src="' + url + '">';
      }, 'image/jpeg', quality);
    }
  </script>
</body>
